package com.TheMasterMindGroup.SimpleObjects;

public class TestCircle {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		

		Circle circle1 = new Circle();
		System.out.println("The radius is : " + circle1.radius + " the area is: " + circle1.getArea());
		
		Circle circle2 = new Circle(5);
		System.out.println("The radius is : " + circle2.radius + " the area is: " + circle2.getArea());
		
		Circle circle3 = new Circle(25);
		System.out.println("The radius is : " + circle3.radius + " the area is: " + circle3.getArea());
	}

}
